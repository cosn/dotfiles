{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,

    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,

    "outDir": "lib",
    "sourceMap": true,
    "declaration": true,

    "typeRoots": [
      "node_modules/@types",
      "src/typings"
    ]
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
